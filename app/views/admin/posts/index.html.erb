<p><%= link_to "Nuevo Post", new_admin_post_path, class: "btn btn-primary" %></p>

<% if @posts.blank? %>
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong>Información!</strong> Aun no hay elementos en la base de datos.
    </div>
<% else %>

  <div class="table-responsive ">
    <table class="table table-striped users-view">
      <thead>
        <tr>
          <th>Usuario </th>
          <th class="post-admin-view">Nombre del post </th>
          <th>Veces leída </th>
          <th>Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |item| %>
          <tr>
            <td><%= item.user.nombre_usuario %></td>
            <td><%= item.titulo %></td>
            <td><%= item.veces_leida %></td>
            <td class="text-center">
              <%= link_to "Mostar", admin_post_path(item), class: "btn btn-xs btn-info" %>
              <%= link_to "Editar", edit_admin_post_path(item), class: "btn btn-xs btn-success" %>
              <%= link_to "Eliminar", admin_post_path(item), method: :delete, data: { confirm: '¿Seguro de eliminar post?'}, class: "btn btn-xs btn-danger" %>
            </td>
           </tr>
         <% end %>
      </tbody>
     </table>
  </div>

<% end %>
