<%= render 'shared/notice_messages' %>

<table class="table">
  <tr>
    <th width="20%">Título</th>
    <td><%= @post.titulo %></td>
  </tr>
  <tr>
    <th>Publicación</th>
    <td><%=raw @post.contenido %></td>
  </tr>
  <tr>
    <th>Veces leía</th>
    <td><%= @post.veces_leida %></td>
  </tr>
  <tr>
    <th>Categorias</th>
    <td><%= @post.categories.inspect %></td>
  </tr>
</table>

<div class="pull-left">
  <%= link_to "Regresar", admin_posts_path, class: "btn btn-default"  %>
  <%= link_to "Editar", edit_admin_post_path(@post), class: "btn btn-success" %>
  <%= link_to "Eliminar", admin_post_path(@post), method: :delete, data: { confirm: '¿Seguro de eliminar post?'}, class: "btn btn-success"%>
  </div>
<div class="clearfix"></div>

