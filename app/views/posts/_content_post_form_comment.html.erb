<div style="padding: 15px;">
  <%= form_for([@post, @post.comments.build], html: { class: 'custom-form' }) do |f| %>
    <div class="form-group">
      <%= f.text_area :comentario, rows: 5, class: 'form-control' %>
      <%= f.hidden_field :nombre_completo, value: current_user.nombre_usuario if current_user.present? %>
    </div>

    <%= f.submit 'Publicar comentario', class: 'estilo_btn2 btn-block' %>
  <% end %>
</div>

